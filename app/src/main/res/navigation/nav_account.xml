<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_account.xml"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.draccoapp.poker.ui.fragments.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_twoFactorFragment"
            app:destination="@id/twoFactorFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotEmailFragment"
            app:destination="@id/forgotEmailFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerProfileFragment"
            app:destination="@id/registerProfileFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerDoneFragment"
            app:destination="@id/registerDoneFragment" />
    </fragment>
    <fragment
        android:id="@+id/twoFactorFragment"
        android:name="com.draccoapp.poker.ui.fragments.login.TwoFactorFragment"
        android:label="TwoFactorFragment" />
    <fragment
        android:id="@+id/forgotEmailFragment"
        android:name="com.draccoapp.poker.ui.fragments.forgot.ForgotEmailFragment"
        android:label="ForgotEmailFragment" >
        <action
            android:id="@+id/action_forgotEmailFragment_to_forgotCodeFragment"
            app:destination="@id/forgotCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotCodeFragment"
        android:name="com.draccoapp.poker.ui.fragments.forgot.ForgotCodeFragment"
        android:label="ForgotCodeFragment" >
        <action
            android:id="@+id/action_forgotCodeFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.draccoapp.poker.ui.fragments.forgot.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/registerProfileFragment"
        android:name="com.draccoapp.poker.ui.fragments.register.RegisterProfileFragment"
        android:label="RegisterProfileFragment" >
        <action
            android:id="@+id/action_registerProfileFragment_to_termsUseFragment2"
            app:destination="@id/termsUseFragment2" />
        <action
            android:id="@+id/action_registerProfileFragment_to_politicPrivacyFragment2"
            app:destination="@id/politicPrivacyFragment2" />
        <action
            android:id="@+id/action_registerProfileFragment_to_registerContactFragment"
            app:destination="@id/registerContactFragment" />
    </fragment>
    <fragment
        android:id="@+id/termsUseFragment2"
        android:name="com.draccoapp.poker.ui.fragments.profile.TermsUseFragment"
        android:label="TermsUseFragment" />
    <fragment
        android:id="@+id/politicPrivacyFragment2"
        android:name="com.draccoapp.poker.ui.fragments.profile.PoliticPrivacyFragment"
        android:label="PoliticPrivacyFragment" />
    <fragment
        android:id="@+id/registerContactFragment"
        android:name="com.draccoapp.poker.ui.fragments.register.RegisterContactFragment"
        android:label="RegisterContactFragment" >
        <action
            android:id="@+id/action_registerContactFragment_to_registerCodeFragment"
            app:destination="@id/registerCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerCodeFragment"
        android:name="com.draccoapp.poker.ui.fragments.register.RegisterCodeFragment"
        android:label="RegisterCodeFragment" >
        <action
            android:id="@+id/action_registerCodeFragment_to_registerPasswordFragment"
            app:destination="@id/registerPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerPasswordFragment"
        android:name="com.draccoapp.poker.ui.fragments.register.RegisterPasswordFragment"
        android:label="RegisterPasswordFragment" >
        <action
            android:id="@+id/action_registerPasswordFragment_to_registerDoneFragment"
            app:destination="@id/registerDoneFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerDoneFragment"
        android:name="com.draccoapp.poker.ui.fragments.register.RegisterDoneFragment"
        android:label="RegisterDoneFragment" >
        <action
            android:id="@+id/action_registerDoneFragment_to_termsUseFragment2"
            app:destination="@id/termsUseFragment2" />
        <action
            android:id="@+id/action_registerDoneFragment_to_politicPrivacyFragment2"
            app:destination="@id/politicPrivacyFragment2" />
        <action
            android:id="@+id/action_registerDoneFragment_to_aboutFragment2"
            app:destination="@id/aboutFragment2" />
        <action
            android:id="@+id/action_registerDoneFragment_to_centerHelpFragment2"
            app:destination="@id/centerHelpFragment2" />
        <action
            android:id="@+id/action_registerDoneFragment_to_contactFragment2"
            app:destination="@id/contactFragment2" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment2"
        android:name="com.draccoapp.poker.ui.fragments.profile.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/centerHelpFragment2"
        android:name="com.draccoapp.poker.ui.fragments.profile.CenterHelpFragment"
        android:label="CenterHelpFragment" />
    <fragment
        android:id="@+id/contactFragment2"
        android:name="com.draccoapp.poker.ui.fragments.profile.ContactFragment"
        android:label="ContactFragment" />
</navigation>