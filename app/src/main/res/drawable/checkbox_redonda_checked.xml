<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Círculo externo branco com borda azul -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@color/primary" /> <!-- Largura e cor da borda -->
            <solid android:color="@android:color/white" /> <!-- Cor do círculo -->
        </shape>
    </item>
    <!-- Círculo interno azul -->
    <item
        android:bottom="5.2dp"
        android:left="5.2dp"
        android:right="5.2dp"
        android:top="5.2dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary" /> <!-- Cor do círculo interno -->
        </shape>
    </item>
</layer-list>